<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tool_bar_parent"
    android:layout_width="@dimen/tool_bar_width"
    android:layout_height="@dimen/tool_bar_height" >

    <LinearLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.9"
        android:background="@drawable/dot_design_bar"
        android:gravity="center_vertical"
        android:visibility="gone" >

        <ImageButton
            android:id="@+id/btn_palette"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dot_design_btn_freedraw_dark" />

        <ImageButton
            android:id="@+id/btn_eraser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xs_3"
            android:background="@drawable/dot_design_btn_eraser_dark" />

        <ImageButton
            android:id="@+id/btn_virtual_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xs_3"
            android:background="@drawable/dot_design_btn_dot_cover_dark" />

        <ImageButton
            android:id="@+id/btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xs_3"
            android:background="@drawable/dot_design_btn_menu_dark" />
    </LinearLayout>

</LinearLayout>